<body>
  <%= render 'layouts/header' %>
  <div class="container">
    <h1><%= @wines.name %></h1>
    <% red_wine = [ 'syrah', 'shiraz', 'merlot', 'cabernet sauvignon', 'malbec', 'pinot noir', 'zinfandel', 'sangiovese', 'barbera'] %>
    <% white_wine = [ 'chardonnay', 'sauvignon blanc', 'semillon', 'moscato', 'pinot grigio', 'gewurztraminer', 'riesling'] %>
    <% if @wines.wine_pic.file? %>
      <%= image_tag @wines.wine_pic.url(:thumb) %>
    <% else %>
      <% if red_wine.include?(@wines.variety.downcase) %>
        <%= image_tag('https://s3.amazonaws.com/mywinebucket/generic-red.jpg', height: '300', width: '300') %>
      <% elsif white_wine.include?(@wines.variety.downcase) %>
        <%= image_tag('https://s3.amazonaws.com/mywinebucket/generic-white.jpg', height: '300', width: '300') %>
      <% else %>
        <%= image_tag('https://s3.amazonaws.com/mywinebucket/generic-red.jpg', height: '300', width: '300') %>
      <% end %>
    <% end %>
    <%= link_to 'Destroy', @wines, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'button no-style' %>
    <%= link_to 'Edit', edit_wine_path(@wines), :class => 'button no-style' %>
    <%= link_to 'Back', wines_path, :class => 'button no-style' %>

    <p><%= @wines.variety %></p>
    <p><%= @wines.year %></p>
    <p><%= @wines.winery %></p>
    <p><%= @wines.quantity %></p>
    <p><%= @wines.country %></p>
    <p><%= @wines.region %></p>
    <p><%= @wines.notes %></p>
    <%= render 'layouts/footer' %>
  </div>
</body>
